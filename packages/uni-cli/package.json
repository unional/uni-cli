    "ramda": "^0.26.1",
    "update-notifier": "^2.5.0"
  },
  "devDependencies": {
    "@types/ncp": "^2.0.1",
    "@types/ramda": "^0.25.44",
    "@types/tmp": "^0.0.33",
    "@types/update-notifier": "^2.5.0",
    "@unional/devpkg-node": "^1.0.5",
    "tmp": "^0.0.33"
  }
